{
  "name": "server",
  "description": "Backend of Land of the Rair",
  "main": "index.js",
  "bin": {
    "lotr-server": "dist/src/core/index.js"
  },
  "scripts": {
    "setup": "npm i && npm run setup:content",
    "setup:content": "node scripts/setup",
    "start": "node dist/src/core/index",
    "start:dev": "nodemon --delay 1000 --ext json --watch content/_output/maps --exec \"npm run tsc:dev\"",
    "tsc:dev": "tsc-watch --sourceMap --onSuccess \"node --inspect=7010 -r source-map-support/register dist/src/core/index.js\"",
    "content:dev": "cd content && npm run watch",
    "lint": "eslint -c .eslintrc.json --ext .ts src",
    "build": "tsc",
    "build:package": "pkg . --public --output=build/lotr-server.exe",
    "build:package:all": "npm run build && npm run build:package"
  },
  "engines": {
    "node": ">= 20",
    "npm": ">= 8"
  },
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/rate-limit": "^10.3.0",
    "@lotr/characters": "*",
    "@lotr/currency": "*",
    "@lotr/effects": "*",
    "@lotr/exp": "*",
    "@lotr/logger": "*",
    "@lotr/rng": "*",
    "bcrypt": "^5.0.0",
    "bufferutil": "^4.0.2",
    "censor-sensor": "^1.0.6",
    "deep-freeze": "0.0.1",
    "didyoumean2": "^7.0.4",
    "discord.js": "^14.16.3",
    "dotenv": "8.1.0",
    "download-github-repo": "0.1.4",
    "fantastical": "^2.0.1",
    "fast-json-patch": "^3.1.1",
    "fastify": "^5.6.1",
    "fs-extra": "8.1.0",
    "injection-js": "^2.3.0",
    "lodash": "4.17.21",
    "logger-timer": "1.0.5",
    "lootastic": "1.1.2",
    "luxon": "1.25.0",
    "mongo-portable": "^2.0.3",
    "mongodb": "3.6.3",
    "mrpas": "2.0.0",
    "muud": "1.0.5",
    "nodemailer": "^6.6.1",
    "pathfinding": "0.4.18",
    "process-stats": "3.5.4",
    "rbush": "^3.0.1",
    "recursive-readdir": "2.2.2",
    "reflect-metadata": "0.1.13",
    "rot-js": "^2.2.1",
    "stripe": "^8.138.0",
    "utf-8-validate": "^5.0.3",
    "uuid": "^3.3.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@lotr/content": "*",
    "@lotr/eslint-config": "*",
    "@lotr/initializers": "*",
    "@lotr/interfaces": "*",
    "@lotr/shared": "*",
    "@sytten/ts-node-dev": "^1.0.3",
    "@types/lodash": "^4.14.168",
    "@types/mongodb": "3.3.13",
    "@types/node": "^20.19.17",
    "@types/ws": "^7.4.0",
    "@yao-pkg/pkg": "^5.15.0",
    "nodemon": "^3.1.4",
    "pkg": "^5.8.1",
    "prettier": "^3.3.3",
    "source-map-support": "^0.5.19",
    "symlink-dir": "4.1.0",
    "ts-node": "^10.9.2",
    "tsc-watch": "^7.1.1",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "pkg": {
    "targets": [
      "node20-win"
    ],
    "assets": [
      "dist/**/*.js",
      "dist/server/content/**/*.json",
      "node_modules/bcrypt/lib/binding/napi-v3/bcrypt_lib.node"
    ]
  }
}
